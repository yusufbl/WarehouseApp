@page "/add/6"
@inject NavigationManager NavigationManager
@using DataServices.Data
@inject IHallwayRow IHallwayRow

<h3>Add Hallway Row</h3>

@code {
    private HallwayRowInfo hallwayRow = new HallwayRowInfo();

    private async Task SaveHallwayRow()
    {
        await IHallwayRow.AddHallwayRowAsync(hallwayRow);
        NavigationManager.NavigateTo("/add"); 
    }
}

<div class="form-group">
    <label for="warehouseId">Warehouse ID:</label>
    <input id="warehouseId" class="form-control" @bind="hallwayRow.WarehouseId">
</div>

<div class="form-group">
    <label for="hallwayId">Hallway ID:</label>
    <input id="hallwayId" class="form-control" @bind="hallwayRow.HallwayId">
</div>

<div class="form-group">
    <label for="rowId">Row ID:</label>
    <input id="rowId" class="form-control" @bind="hallwayRow.RowNo">
</div>

<button class="btn btn-primary" @onclick="SaveHallwayRow">Save</button>
